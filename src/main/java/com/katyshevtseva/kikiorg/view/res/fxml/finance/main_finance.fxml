    </top>

    <center>
        <Pane fx:id="mainPane" maxHeight="800" minHeight="800"/>
    </center>

    <left>
        <Pane minWidth="30" maxWidth="30"/>
    </left>

    <right>
        <Pane minWidth="30" maxWidth="30"/>
