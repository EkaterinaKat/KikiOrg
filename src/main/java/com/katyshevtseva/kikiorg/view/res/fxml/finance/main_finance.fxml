                <Pane minWidth="30" maxWidth="30"/>
                <Button fx:id="historyButton" text="History"/>
                <Pane minWidth="30" maxWidth="30"/>
                <Button fx:id="transferButton" text="Transfer"/>
                <Pane minWidth="30" maxWidth="30"/>
                <Button fx:id="itemHierarchyButton" text="Item Hierarchy"/>
                <Pane minWidth="30" maxWidth="30"/>
                <Button fx:id="reportButton" text="Report"/>
