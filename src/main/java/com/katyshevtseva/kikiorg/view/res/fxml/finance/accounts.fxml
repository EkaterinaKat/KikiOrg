<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" alignment="CENTER">

    <stylesheets>
        <URL value="@/com/katyshevtseva/kikiorg/view/res/css/general_style.css"/>
    </stylesheets>


    <GridPane alignment="CENTER">
        <VBox>
            <TextField fx:id="accountTitleField"/>
            <Pane minHeight="10"/>
            <TextArea fx:id="accountDescArea" minWidth="250" maxWidth="250" text="-"
                      GridPane.rowIndex="0" GridPane.columnIndex="1" maxHeight="80"/>
            <Pane minHeight="10"/>
            <Button fx:id="addAccountButton" text="Add account"/>
        </VBox>
    </GridPane>

    <Pane maxHeight="25" minHeight="25"/>
    <Label text="*****************************************************************"/>
    <Pane maxHeight="25" minHeight="25"/>

    <Button fx:id="validationButton" text="Validate all accounts" prefWidth="220"/>

    <Pane maxHeight="25" minHeight="25"/>
    <Label text="*****************************************************************"/>
    <Pane maxHeight="25" minHeight="25"/>

    <TextArea fx:id="reportTextArea" editable="false" minWidth="800" maxWidth="800" prefHeight="400"/>

</VBox>
