<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.*?>
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml">

    <VBox prefWidth="300">
        <ComboBox fx:id="modeComboBox" maxWidth="250" minWidth="250"/>
        <Pane minHeight="15" maxHeight="15"/>
        <DatePicker fx:id="startDatePicker" maxWidth="250" minWidth="250"/>
        <Pane minHeight="15" maxHeight="15"/>
        <DatePicker fx:id="endDatePicker" maxWidth="250" minWidth="250"/>
        <Pane minHeight="15" maxHeight="15"/>
        <Button fx:id="showButton" text="Show" maxWidth="250" minWidth="250"/>
        <Pane minHeight="15" maxHeight="15"/>
        <GridPane fx:id="table" maxWidth="250" minWidth="250"/>
    </VBox>

    <Pane prefWidth="20"/>

    <PieChart fx:id="chart" prefWidth="800" prefHeight="800"/>

</HBox>
