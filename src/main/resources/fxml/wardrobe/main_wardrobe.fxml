<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml">

    <stylesheets>
        <URL value="@/css/general_style.css"/>
    </stylesheets>

    <top>
        <VBox>
            <Pane minHeight="10" maxHeight="10"/>
            <HBox>
                <Pane minWidth="30" maxWidth="30"/>
                <Button fx:id="piecesButton" text="Pieces"/>
                <Pane minWidth="30" maxWidth="30"/>
                <Button fx:id="outfitsButton" text="Outfits"/>
                <Pane minWidth="30" maxWidth="30"/>
                <Button fx:id="statisticsButton" text="Statistics"/>
            </HBox>
            <Pane minHeight="10" maxHeight="10"/>
        </VBox>
    </top>

    <center>
        <Pane fx:id="mainPane" maxHeight="400" minHeight="400"/>
    </center>

    <left>
        <Pane minWidth="30" maxWidth="30"/>
    </left>

    <right>
        <Pane minWidth="30" maxWidth="30"/>
    </right>

    <bottom>
        <Pane minHeight="30" maxHeight="30"/>
    </bottom>

</BorderPane>
