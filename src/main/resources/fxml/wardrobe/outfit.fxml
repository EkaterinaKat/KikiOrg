<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml">

    <Button fx:id="outfitCreateButton" text="New Outfit"/>

    <Pane prefHeight="20"/>

    <HBox>
        <ScrollPane prefWidth="890" prefHeight="800">
            <HBox>
                <Pane prefWidth="10"/>
                <VBox>
                    <Pane prefHeight="10"/>
                    <GridPane fx:id="gridPane" vgap="10" hgap="10"/>
                    <Pane prefHeight="10"/>
                </VBox>
                <Pane prefWidth="10"/>
            </HBox>
        </ScrollPane>
        <Pane prefWidth="20"/>
        <VBox>
            <Label fx:id="infoLabel" maxWidth="220" wrapText="true"/>
            <Pane prefHeight="20"/>
            <Button fx:id="outfitEditButton" text="Edit" visible="false"/>
        </VBox>
    </HBox>

</VBox>
