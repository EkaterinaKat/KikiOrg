<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml">


    <HBox>
        <Button fx:id="outfitCreateButton" text="New Outfit"/>
        <Pane prefWidth="20"/>
        <ComboBox fx:id="purposeComboBox"/>
        <Pane prefWidth="10"/>
        <ComboBox fx:id="seasonComboBox"/>
        <Pane prefWidth="10"/>
        <Button fx:id="showAllButton" text="Show all"/>
    </HBox>

    <Pane prefHeight="20"/>

    <HBox>
        <GridPane vgap="10">
            <ScrollPane prefWidth="890" prefHeight="800" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <HBox>
                    <Pane prefWidth="10"/>
                    <VBox>
                        <Pane prefHeight="10"/>
                        <GridPane fx:id="gridPane" vgap="10" hgap="10"/>
                        <Pane prefHeight="10"/>
                    </VBox>
                    <Pane prefWidth="10"/>
                </HBox>
            </ScrollPane>
            <VBox fx:id="paginationPane" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        </GridPane>
        <Pane prefWidth="20"/>
        <VBox>
            <Label fx:id="infoLabel" maxWidth="220" wrapText="true"/>
            <Pane prefHeight="20"/>
            <Button fx:id="outfitEditButton" text="Edit" visible="false"/>
        </VBox>
    </HBox>

</VBox>
