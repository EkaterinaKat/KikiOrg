<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml">

    <ScrollPane prefHeight="800" prefWidth="800">
        <HBox>
            <Pane maxWidth="20" minWidth="20"/>
            <VBox>
                <Pane maxHeight="20" minHeight="20"/>
                <GridPane fx:id="schemaBox"/>
                <Pane maxHeight="20" minHeight="20"/>
            </VBox>
            <Pane maxWidth="20" minWidth="20"/>
        </HBox>
    </ScrollPane>

    <Pane maxWidth="20" minWidth="20"/>

    <VBox>
        <TextField fx:id="nameTextField"/>
        <Pane minHeight="20" maxHeight="20"/>
        <Button text="Add group" fx:id="addButton"/>
        <Pane minHeight="20" maxHeight="20"/>
        <TableView fx:id="table" maxWidth="270" minWidth="270">
            <columns>
                <TableColumn fx:id="titleColumn" text="Groups" maxWidth="195" minWidth="195"/>
                <TableColumn fx:id="deleteColumn" maxWidth="75" minWidth="75"/>
            </columns>
        </TableView>
    </VBox>

</HBox>
