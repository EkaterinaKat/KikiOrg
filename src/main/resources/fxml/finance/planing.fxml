<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml">

    <Pane minHeight="20" maxHeight="20"/>

    <HBox>

        <Pane minWidth="20" maxWidth="20"/>

        <VBox>

            <ComboBox fx:id="groupAccountComboBox" minWidth="150" maxWidth="150"/>

            <Pane minHeight="20" maxHeight="20"/>

            <Label fx:id="infoLabel"/>

            <Pane minHeight="20" maxHeight="20"/>

            <Pane fx:id="expensePane"/>
        </VBox>

        <Pane minWidth="20" maxWidth="20"/>

        <VBox>

            <ComboBox fx:id="groupingTypeComboBox"/>

            <Pane minHeight="20" maxHeight="20"/>

            <ScrollPane maxWidth="1000" minWidth="1000" maxHeight="500" minHeight="500">
                <GridPane fx:id="tablePane" hgap="1" vgap="1"/>
            </ScrollPane>

        </VBox>

    </HBox>

</VBox>
