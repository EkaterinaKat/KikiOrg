<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml">

    <Pane maxHeight="20" minHeight="20"/>

    <HBox>
        <Pane minWidth="20" maxWidth="20"/>
        <VBox>
            <HBox>
                <Label text="Account to delete: "/>
                <ComboBox fx:id="accountToDeleteComboBox"/>
            </HBox>
            <Pane maxHeight="20" minHeight="20"/>
            <HBox>
                <Label text="Substitute account: "/>
                <ComboBox fx:id="substituteAccountComboBox"/>
            </HBox>
            <Pane maxHeight="20" minHeight="20"/>
            <Button fx:id="deleteButton" text="Delete"/>
        </VBox>
    </HBox>

    <Pane maxHeight="20" minHeight="20"/>

    <Label text="+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++"/>

    <Pane maxHeight="20" minHeight="20"/>

    <HBox>
        <Pane minWidth="20" maxWidth="20"/>
        <VBox>
            <HBox>
                <Label text="Item to merge: "/>
                <ComboBox fx:id="itemToMergeComboBox"/>
            </HBox>
            <Pane maxHeight="20" minHeight="20"/>
            <HBox>
                <Label text="Destination item: "/>
                <ComboBox fx:id="destItemComboBox"/>
            </HBox>
            <Pane maxHeight="20" minHeight="20"/>
            <Button fx:id="mergeButton" text="Merge"/>
        </VBox>
    </HBox>

</VBox>
