<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml">

    <stylesheets>
        <URL value="@/css/general_style.css"/>
    </stylesheets>

    <Pane minWidth="25" maxWidth="25"/>
    <VBox>
        <Pane minHeight="25" maxHeight="25"/>
        <HBox>
            <TextField fx:id="titleTextField" styleClass="margin40" maxWidth="400" minWidth="400"/>
            <Pane minWidth="25" maxWidth="25"/>
            <CheckBox fx:id="activeCheckBox"/>
        </HBox>
        <Pane minHeight="30" maxHeight="30"/>
        <TextArea fx:id="descTextArea" wrapText="true" minWidth="500" maxWidth="500" prefHeight="350"/>
        <Pane minHeight="25" maxHeight="25"/>
        <HBox>
            <Label text="criteria: "/>
            <Pane minWidth="10" maxWidth="10"/>
            <TextField fx:id="doneDaysTextField" prefWidth="50"/>
            <Label text="/"/>
            <TextField fx:id="totalDaysTextField" prefWidth="50"/>
        </HBox>
        <Pane minHeight="25" maxHeight="25"/>
        <Button fx:id="saveButton" text="Save"/>
    </VBox>
    <Pane minWidth="25" maxWidth="25"/>

</HBox>
