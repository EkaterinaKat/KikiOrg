<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml">

    <Pane minWidth="25" maxWidth="25"/>
    <VBox alignment="CENTER">
        <Pane minHeight="25" maxHeight="25"/>
        <DatePicker fx:id="datePicker"/>
        <Pane minHeight="25" maxHeight="25"/>
        <ScrollPane minWidth="700" maxWidth="700" minHeight="780" maxHeight="780">
            <VBox alignment="CENTER">
                <GridPane fx:id="indicatorPane" hgap="20" vgap="20"/>
                <Pane minHeight="20" maxHeight="20"/>
                <Button visible="false" fx:id="showHiddenButton" text="Show hidden"/>
                <Pane minHeight="20" maxHeight="20"/>
                <GridPane fx:id="hiddenIndicatorPane" hgap="20" vgap="20"/>
            </VBox>
        </ScrollPane>
        <Pane minHeight="25" maxHeight="25"/>
        <Button fx:id="saveButton" text="Save"/>
    </VBox>
    <Pane minWidth="25" maxWidth="25"/>

</HBox>
