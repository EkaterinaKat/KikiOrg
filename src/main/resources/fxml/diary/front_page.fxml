<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml">

    <Pane minHeight="25" maxHeight="25"/>
    <HBox>
        <Button fx:id="makeMarksButton" text="Make marks"/>
        <Pane maxWidth="50" minWidth="50"/>
        <DatePicker fx:id="startDatePicker"/>
        <Pane maxWidth="10" minWidth="10"/>
        <DatePicker fx:id="endDatePicker"/>
    </HBox>


    <Pane minHeight="25" maxHeight="25"/>

    <ScrollPane maxWidth="1050" minWidth="1050" maxHeight="750" minHeight="750">
        <GridPane fx:id="tablePane" hgap="1" vgap="1"/>
    </ScrollPane>

</VBox>
