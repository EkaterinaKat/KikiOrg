<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml">

    <Pane minHeight="20" maxHeight="20"/>

    <HBox>
        <Pane minWidth="20" maxWidth="20"/>

        <VBox>
            <ComboBox fx:id="indicatorComboBox" maxWidth="200" minWidth="200"/>
            <Pane minHeight="20" maxHeight="20"/>
            <ComboBox fx:id="spanComboBox" maxWidth="200" minWidth="200"/>
            <Pane minHeight="20" maxHeight="20"/>
            <Button fx:id="showButton" text="Show" maxWidth="200" minWidth="200"/>
        </VBox>

        <Pane minWidth="20" maxWidth="20"/>

        <VBox>
            <ScrollPane maxWidth="700" minWidth="700" minHeight="400" maxHeight="400">
                <VBox fx:id="chartPane"/>
            </ScrollPane>
            <Pane minHeight="20" maxHeight="20"/>
            <ScrollPane maxWidth="700" minWidth="700" minHeight="400" maxHeight="400">
                <Label fx:id="detailLabel" maxWidth="600" minWidth="600" wrapText="true"/>
            </ScrollPane>
        </VBox>


    </HBox>

</VBox>
