<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml">

    <HBox>
        <VBox fx:id="statusBox"/>
        <Pane maxWidth="20" minWidth="20"/>
        <TextField fx:id="searchField" prefWidth="300"/>
    </HBox>


    <Pane minHeight="10" maxHeight="10"/>
    <HBox>
        <VBox>
            <ScrollPane maxWidth="230" minWidth="230" maxHeight="600" minHeight="600">
                <GridPane fx:id="spherePane" hgap="10" vgap="10" maxWidth="200" minWidth="200"/>
            </ScrollPane>
            <Pane minHeight="20" maxHeight="20"/>
            <Button fx:id="newTaskButton" text="New task" visible="false"/>
            <Pane minHeight="20" maxHeight="20"/>
            <Label fx:id="statisticsLabel"/>
        </VBox>

        <Pane maxWidth="20" minWidth="20"/>

        <Pane fx:id="tasksPane"/>
    </HBox>

</VBox>
