<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          xmlns="http://javafx.com/javafx" alignment="CENTER">

    <VBox alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <DatePicker fx:id="datePicker"/>
        <Pane minHeight="25" maxHeight="25"/>
        <ScrollPane>
            <VBox alignment="CENTER">
                <GridPane fx:id="subjectPane" hgap="20" vgap="20" alignment="CENTER"/>
            </VBox>
        </ScrollPane>
        <Pane minHeight="25" maxHeight="25"/>
        <Button fx:id="saveButton" text="Save"/>
    </VBox>

</GridPane>
