<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<HBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx">

    <ScrollPane maxWidth="250" minWidth="250">
        <GridPane fx:id="gridPane" alignment="CENTER" maxWidth="240" minWidth="240" vgap="10"/>
    </ScrollPane>

    <Pane maxWidth="20" minWidth="20"/>

    <VBox>

        <Button fx:id="newSubjectButton" text="New Subject"/>
        <Pane minHeight="25" maxHeight="25"/>
        <HBox>
            <Pane minWidth="25" maxWidth="25"/>
            <ImageView fx:id="imageView" fitWidth="100" fitHeight="100"/>
            <Pane minWidth="15" maxWidth="15"/>
            <VBox>
                <Pane minHeight="25" maxHeight="25"/>
                <Label fx:id="titleLabel" styleClass="font_25" wrapText="true" minWidth="650" maxWidth="650"/>
                <Pane minHeight="25" maxHeight="25"/>
                <Label fx:id="descLabel" wrapText="true" minWidth="650" maxWidth="650"/>
                <Pane minHeight="25" maxHeight="25"/>
            </VBox>
            <Pane minWidth="25" maxWidth="25"/>
        </HBox>
    </VBox>

</HBox>


