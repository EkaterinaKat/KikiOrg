<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml">

    <ComboBox fx:id="statusBox"/>

    <Pane minHeight="10" maxHeight="10"/>
    <HBox>
        <VBox>
            <ScrollPane maxWidth="300" minWidth="300" maxHeight="600" minHeight="600">
                <GridPane fx:id="gridPane" hgap="10" vgap="10" maxWidth="270" minWidth="270"/>
            </ScrollPane>
            <Pane minHeight="20" maxHeight="20"/>
            <Button fx:id="newTaskButton" text="New task" visible="false"/>
            <Pane minHeight="20" maxHeight="20"/>
            <Label fx:id="statisticsLabel"/>
        </VBox>

        <Pane maxWidth="20" minWidth="20"/>

        <Pane fx:id="tasksPane"/>
    </HBox>

</VBox>
